from __future__ import division
from __future__ import print_function
from __future__ import absolute_import
from __future__ import unicode_literals

import argparse
import os
import sys
import numpy as np
import matplotlib.pyplot as plt
import healpy
import fitsio
import sdss_access.path

sdss_path = sdss_access.path.Path()


if __name__ == '__main__':

    parser = argparse.ArgumentParser(
        prog=os.path.basename(sys.argv[0]),
        description='Evaluate completeness of target assignments')

    parser.add_argument('-p', '--plan', dest='plan',
                        type=str, help='name of plan', required=True)
    parser.add_argument('-o', '--observatory', dest='observatory',
                        type=str, help='apo or lco',
                        choices=['apo', 'lco'], required=True)

    args = parser.parse_args()
    plan = args.plan
    observatory = args.observatory

    completeness_file = sdss_path.full('rsCompleteness', plan=plan,
                                       observatory=observatory)

    ntargets_map, hdr = fitsio.read(completeness_file, header=True, ext=0)
    nside = np.int32(hdr['NSIDE'])
    ngot_map = fitsio.read(completeness_file, ext=1)
    fgot_map = fitsio.read(completeness_file, ext=2)

    fig = plt.figure(figsize=(8, 4))
    healpy.mollview(ntargets_map, title='Number of targets')
    ntargets_png_file = sdss_path.full('rsAssignmentsPng',
                                       name='ntargets', plan=plan,
                                       observatory=observatory)
    plt.savefig(ntargets_png_file)

    fig = plt.figure(figsize=(8, 4))
    healpy.mollview(ngot_map, title='Number of targets gotten')
    ngot_png_file = sdss_path.full('rsAssignmentsPng',
                                   name='ngot', plan=plan,
                                   observatory=observatory)
    plt.savefig(ngot_png_file)

    fig = plt.figure(figsize=(8, 4))
    healpy.mollview(fgot_map, title='Fraction of targets gotten')
    fgot_png_file = sdss_path.full('rsAssignmentsPng',
                                   name='fgot', plan=plan,
                                   observatory=observatory)
    plt.savefig(ntargets_png_file)
