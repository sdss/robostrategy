from __future__ import division
from __future__ import print_function
from __future__ import absolute_import
from __future__ import unicode_literals

import roboscheduler.cadence as cadence


if __name__ == '__main__':

    cadencelist = cadence.CadenceList(skybrightness_only=True)
    cadencelist.fromdb()

    pairs = [['mwm_galactic_1x1', 'mwm_tess_1x1'],
             ['bhm_spiders_1x1', 'bhm_spiders_1x8'],
             ['bhm_aqmes_wide_2x4', 'bhm_aqmes_wide_3x4'],
             ['bhm_aqmes_wide_3x4', 'bhm_aqmes_medium_12x4'],
             ['bhm_aqmes_wide_2x4', 'bhm_aqmes_medium_12x4'],
             ['mwm_rv_6x1', 'bhm_aqmes_medium_12x4'],
             ['mwm_rv_9x1', 'bhm_aqmes_medium_12x4'],
             ['mwm_rv_12x1', 'bhm_aqmes_medium_12x4'],
             ['bhm_spiders_1x8', 'bhm_rm_174x8'],
             ['bhm_aqmes_wide_2x4', 'bhm_rm_174x8'],
             ['bhm_aqmes_wide_3x4', 'bhm_rm_174x8'],
             ['bhm_aqmes_medium_12x4', 'bhm_rm_174x8'],
             ['mwm_erosita_bright_1x1', 'mwm_erosita_faint_1x3'],
             ['mwm_rv_6x1', 'mwm_rv_6x2'],
             ['mwm_rv_6x1', 'mwm_rv_9x1'],
             ['mwm_rv_6x1', 'mwm_rv_18x1'],
             ['mwm_rv_12x1', 'mwm_rv_15x1'],
             ['mwm_rv_12x1', 'mwm_rv_18x1'],
             ['mwm_rv_12x1', 'mwm_rv_18x4'],
             ['mwm_rv_9x1', 'mwm_rv_18x1']]

    for pair in pairs:
        one = pair[0]
        two = pair[1]
        print("{one} in {two}:".format(one=one, two=two))
        cc = cadencelist.cadence_consistency(one=one, two=two)
        print("  {cc}".format(cc=cc))
